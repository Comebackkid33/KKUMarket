<script>
    $('input[name=dem]').change(function() {

        if( $("#length").val()!=0 && $("#width").val()!=0 && $("#height").val()!=0 ){
            if( $("#resForm").hasClass('has-error'))
            {
                $("#resForm").toggleClass('has-error has-success');
                $("#resultHelp").hide();
            }
            calcRoad();
        }});
</script>

